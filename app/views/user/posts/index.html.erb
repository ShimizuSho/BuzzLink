
<h1>POSTS index</h1>
<div class="row clearfix">
	<div class="col-lg-3">
		<%= render 'user/folders/template', folders: @folders %>
	</div>
	<div class="col-lg-9">
		<% @posts.each do |post| %>
			<div class= "post_info_box">
				<div class= "profile_image">
					<%= link_to user_user_path(post.user.id) do %>
						<%= attachment_image_tag post.user, :profile_image, :fill, 140, 140, fallback: "no_image.jpg", size:'140x140' %>
					<% end %>
				</div>
				<div class= "post_info_1">
					<%= link_to user_post_path(post.id) do %>
						<h3><%= post.post_title %></h3>
					<% end %>
					<a><%= post.link %></a>
					<%= link_to user_user_path(post.user.id) do %>
						<h5><%= post.user.name %></h5>
					<% end %>
				</div>
				<div class= "post_info_2">
					<%= post.created_at.strftime('%Y/%m/%d') %>
					<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span><%= post.favorites.count %>
				</div>
			</div>
		<% end %>
	</div>
</div>

<p><%= link_to '新規投稿', new_user_post_path %></p>
<p><%= link_to 'お問い合わせ', new_user_contact_path %></p>
<p><%= link_to '質問一覧', user_questions_path %></p>
<p><%= link_to "ログアウト", destroy_user_session_path, method: "delete" %></p>
