
<h1>POSTS index</h1>
<div class="row clearfix">
	<div class="col-lg-3">
		<%= render 'user/folders/template', folders: @folders %>
	</div>
	<div class="col-lg-9">
		<p>
			<% @posts.each do |post| %>
			<%= link_to user_user_path(post.user.id) do %>
				<%= attachment_image_tag post.user, :profile_image, :fill, 180, 180, fallback: "no_image.jpg", size:'180x180' %>
			<% end %>
		</p>
		<p>
			<%= post.created_at.strftime('%Y/%m/%d') %>
			<%= link_to user_post_path(post) do %>
				<%= post.post_title %>
			<% end %>
		</p>
				<a><%= post.link %></a>
			<p>
				<%= link_to user_user_path(post.user.id) do %>
					<%= current_user.name %>
				<% end %>
			</p>
		<% end %>
	</div>
</div>

<p><%= link_to '新規投稿', new_user_post_path %></p>
<p><%= link_to 'お問い合わせ', new_user_contact_path %></p>
<p><%= link_to '質問一覧', user_questions_path %></p>
<p><%= link_to "ログアウト", destroy_user_session_path, method: "delete" %></p>
