<h1>フォローされている人</h1>
<p>Find me in app/views/users/followers.html.erb</p>

<% @users.each do |user| %>
  <hr>
    <% if current_user != user %>
	    <div class="followers_info">
	        <%= link_to user_user_path(user.id) do %>
				<%= attachment_image_tag user, :profile_image, :fill, 180, 180, fallback: "no_image.jpg", size:'180x180' %>
			<% end %>
			<%= link_to user_user_path(user.id) do %>
				<h5><%= user.name %></h5>
			<% end %>
		</div>






        <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォローをやめる", user_user_relationships_path(user.id), method: :delete %></p>
        <% else %>
            <p><%=link_to "フォローする", user_user_relationships_path(user.id), method: :post %></p>
        <% end %>
    <% end %>
<% end %>