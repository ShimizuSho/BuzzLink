<div class="row clearfix">
	<div class="col-lg-3 folder_template">
		<%= render 'user/folders/template', folders: @folders %>
	</div>
	<div class="col-lg-1">
	</div>
	<div class="col-lg-8">
		<% if @user == current_user %>
			<div class="ribbon6">
	  			<h1>My Page!</h1>
			</div>
		<% else %>
			<div class="ribbon6">
	  			<h1>Welcome to My Page!</h1>
			</div>
		<% end %>
		<div class="profile_info flex">
			<div >
				<div class="frame<%= @user.evolution.to_i %>">
					<%= attachment_image_tag @user, :profile_image, :fill, 250, 250, fallback: "no_image.jpg", size:'250x250', class: "profile_img" %>
				</div>
				<h3 class="user_name"><%= @user.name %> さん</h3>
				<h3>LEVEL <%= @user_level %></h3>
				<div class="progress">
					<div class="progress-bar" role="progressbar" style= "width: <%= @user.point.to_i % 100 %>%" >
						<%= @user.point.to_i % 100 %>
					</div>
				</div>
				<h4 class="degree">称号　<%= @user.degree %></h4>
				<% if @user.evolution < @user.point / 1000 && @user == current_user %>
					<%= link_to '進化する！', user_evolution_path(@user.id), class: "btn btn-lg btn-primary evolution_btn" %>
				<% end %>

			<% if @user.id != current_user.id %>
		  		<% if @isRoom == true %>
			    	<%= link_to "DMを送る", user_user_room_path(current_user.id, @roomId), class:"btn btn-primary user-show-room" %>
				<% else %>
			    	<%= form_for @room, url: user_user_rooms_path(current_user.id), method: :post do |f| %>
			      		<%= fields_for @entry do |e| %>
			        		<%= e.hidden_field :user_id, value: @user.id %>
			    		<% end %>
			      	<%= f.submit "DMを始める", class:"btn btn-primary btn-lg user-show-chat"%>
			    	<% end %>
			  	<% end %>
			<% end %>

			<p><%=link_to "フォロー", follows_user_user_path(@user.id) %></p>
			<p><%=link_to "フォロワー", followers_user_user_path(@user.id) %></p>
			<% if @user != current_user %>
			    <% if @user.followed_by?(current_user) %>
			        <p><%=link_to "フォロー済み", user_user_relationships_path(@user.id), method: :delete %></p>
			    <% else %>
			        <p><%=link_to "フォローする", user_user_relationships_path(@user.id), method: :post %></p>
			    <% end %>
			<% end %>





			</div>
			<div class="profile_info">
				<h3 class="profile_title">プロフィール</h3>
				<%= link_to edit_user_user_path(@user.id) do %>
					<span class="glyphicon glyphicon glyphicon-edit" aria-hidden="true" style="font-size:30px;"></span>
				<% end %>

				<% if @user.age == 0 %>
					<h4>年齢　非公開</h4>>
				<% else %>
					<h4>年齢 <%= @user.age %></h4>
				<% end %>
				<h4>性別　<%= @user.gender %></h4>
				<% if @user.birthday == nil %>
					<h4>誕生日　未設定</h4>
				<% else %>
				　	<h4>誕生日　<%= @user.birthday %></h4>
				<% end %>
					<div class="introduction_box">
    					<span class="box-title">自己紹介</span>
    					<p><%= @user.introduction %></p>
					</div>
			</div>
		</div>
	</div>
</div>


<p><%= link_to '記事編集', edit_user_post_path %></p>
<p><%= link_to 'トップページ', user_root_path %></p>
<p><%= link_to '新規投稿', new_user_post_path %></p>
<p><%= link_to 'お問い合わせ', new_user_contact_path %></p>
<p><%= link_to '質問一覧', user_questions_path %></p>
<p><%= link_to '新規質問', new_user_question_path %></p>
<p><%= link_to "ログアウト", destroy_user_session_path, method: "delete" %></p>

