<div class = "container">
	<div class="row">
		<div class="col-lg-3 folder_template">
			<%= render 'user/folders/template', folders: @folders %>
		</div>
		<div class="col-lg-1">
		</div>
		<div class="col-lg-8">
			<h1>質問詳細</h1>
			<%= link_to user_user_path(@question.user.id) do %>
				<%= attachment_image_tag @question.user, :profile_image, :fill, 180, 180, fallback: "no_image.jpg", size:'180x180' %>
				<p><%= @question.user.name %></p>
			<% end %>
				<%= @question.question_title %>
			</p>
			<p><%= @question.question_body %></p>
			<%= link_to '質問削除', user_question_path(@question.id), method: :delete %>

			<%= form_for @comment, url: user_question_question_comments_path(@question.id) do |f| %>
				<p>コメント内容</p>
				<p><%= f.text_area :comment_body, size: "50x5", class: "form-control" %></p>
				<%= f.submit 'コメントする' %>
			<% end %>

			<% @comments.each do |comment| %>
				<%= link_to user_user_path(comment.user.id) do %>
					<%= comment.user.name %>
				<% end %>
				<%= comment.comment_body %>
			<% end %>
		</div>
	</div>
</div>
