<div class = "container">
	<div class="row">
		<div class="col-lg-3 folder_template">
			<%= render 'user/folders/template', folders: @folders %>
		</div>
		<div class="col-lg-1">
		</div>
		<div class="col-lg-8">
			<h1>質問一覧</h1>
			<div class= "info_box flex">
				<% @questions.each do |question| %>
					<div class= "profile_image">
						<%= link_to user_user_path(question.user.id) do %>
							<%= attachment_image_tag question.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:"radius", size:'100x100' %>
						<% end %>
					</div>
					<div>
						<%= question.created_at.strftime('%Y/%m/%d') %>
						<%= link_to user_user_path(question.user.id) do %>
							<%= question.user.name %>
						<% end %>
						<%= link_to user_question_path(question.id) do %>
							<%= question.question_title %>
						<% end %>
					</div>
					<div>
						<%= question.question_body %>
					</div>
				<% end %>
			<%= paginate @questions, class: "paginate" %>
		</div>
	</div>
</div>

	<p><%= link_to 'トップページ', user_root_path %></p>
	<p><%= link_to '新規投稿', new_user_post_path %></p>
	<p><%= link_to 'お問い合わせ', new_user_contact_path %></p>
	<p><%= link_to '新規質問', new_user_question_path %></p>
	<p><%= link_to "ログアウト", destroy_user_session_path, method: "delete" %></p>