<h1>質問一覧</h1>

<% @questions.each do |question| %>
	<%= link_to user_user_path(question.user.id) do %>
		<%= attachment_image_tag question.user, :profile_image, :fill, 180, 180, fallback: "no_image.jpg", size:'180x180' %>
	<% end %>
	<p><%= question.user.name %></p>
	<%= link_to user_question_path(question.id) do %>
	<p><%= question.question_body %></p>
	<% end %>
<% end %>

<p><%= link_to 'トップページ', user_root_path %></p>
<p><%= link_to '新規投稿', new_user_post_path %></p>
<p><%= link_to 'お問い合わせ', new_user_contact_path %></p>
<p><%= link_to '新規質問', new_user_question_path %></p>
<p><%= link_to "ログアウト", destroy_user_session_path, method: "delete" %></p>