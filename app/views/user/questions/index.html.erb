<div class = "container">
	<div class="row">
		<div class="col-lg-3 folder_template">
			<%= render 'user/folders/template', folders: @folders %>
		</div>
		<div class="col-lg-1">
		</div>
		<div class="col-lg-8">
			<h1 class="profile_image">Questions</h1>
			<% @questions.each do |question| %>
				<div class= "info_box">
					<div class= "profile_image">
						<%= link_to user_user_path(question.user.id) do %>
							<%= attachment_image_tag question.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:"radius", size:'100x100' %>
						<% end %>
					</div>
					<div class= "info_1">
						<%= question.created_at.strftime('%Y/%m/%d') %>
						<%= link_to user_user_path(question.user.id) do %>
							<%= question.user.name %>
						<% end %>
						<%= link_to user_question_path(question.id) do %>
							<h4><%= question.question_title.truncate(34, omission: '~~~') %></h4>
						<% end %>
						<p class="question_body"><%= question.question_body.truncate(87, omission: '~~~') %></p>
					</div>
				</div>
			<% end %>
		<%= paginate @questions, class: "paginate" %>
		</div>
	</div>
</div>