<h1>ブックマーク登録</h1>
<%= form_for @folder_content, url: user_folder_contents_create_path(current_user.id, @post.id), method: :post do |f| %>
	<p><%= f.collection_select :folder_id, current_user.folders, :id, :folder_name %></p>
	<p>リンク　<%= @post.link %></p>
	<p>タイトル　<%= f.text_field :folder_contents_title %></p>
	<p>メモ　<%= f.text_area :memo %></p>
	<p><%= f.submit '登録する' %></p>
<% end %>