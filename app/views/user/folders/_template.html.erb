<h1 class= "folder">フォルダー <span class= "glyphicon glyphicon glyphicon-book" aria-hidden="true"></span></h1>
<% i = 1 %>
<% folders.each do |folder| %>
	<div class="folder folder<%= i %>">
		<div class="folder<%= i %>_content">
			<h4 class= "folder_name name<%= i %>"><%= folder.folder_name %></h4>
			<div class="folder_name_form<%= i %> hidden">
				<%= form_for folder, url: user_folder_path(folder.id), remote: true, method: :patch do |f|%>
					<%= f.text_field :folder_name %>
					<%= f.submit 'update' %>
				<% end %>
			</div>
		</div>
		<div class= "folder_name_edit<%= i %>">
			<span class= "glyphicon glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
		</div>
		<span class= "glyphicon glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span>
	</div>
	<% i += 1 %>
<% end %>

<script type="text/javascript">
	let folders = document.querySelectorAll('.folder_name')
	console.log(folders);
	console.log(folders.length);

</script>