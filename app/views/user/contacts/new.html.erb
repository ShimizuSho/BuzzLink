<h1>お問い合わせ</h1>

<%= form_for(@contact, url: {controller: 'user/contacts', action: 'create' }) do |f| %>

<div>
  <p>お名前</p>
    <div>
      <%= f.text_field :name %>
    </div>
</div>
  
  <h4 class="registrations-headline">お問い合わせ内容</h4>
	<div class="row">
		<div class="col-lg-2"></div>
			<div class="col-lg-6"><%= f.text_area :contact_body, size: "100x10", class: "form-control" %></div>
	</div>
	     <h1 class="contact_new_btn"><%= f.submit '送信', class:"btn  btn-lg btn-primary" %></h1>
<% end %>

