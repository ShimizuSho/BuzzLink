<div class = "container">
	<div class="row">
		<h1>New Contact</h1>
		<div class="info_box">
			<%= form_for @contact, url: user_contacts_path, method: :post do |f| %>
				<h4>お名前</h4>
				<h4><%= f.text_field :name, class:"form-control" %></h4>
				<h4>お問い合わせ内容</h4>
				<h4><%= f.text_area :contact_body, class:"form-control", size: "100x10" %></h4>
				<h4><%= f.submit '投稿する' %></h4>
			<% end %>
		</div>
	</div>
</div>
