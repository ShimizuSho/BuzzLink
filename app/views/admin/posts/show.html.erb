
<div class = "container">
	<div class="row">
		<div class="col-lg-1">
		</div>
		<div class="col-lg-8">
			<h3><%= link_to "管理者としてログイン中　ログアウト", destroy_admin_session_path, method: :delete %></h3>
			<h3><%= link_to "トップページへ", admin_root_path %></h3>
			<h1 class="page_title_show">Post Details</h1>
			<div class="flex">
				<div class="profile_image_box">
					<%= link_to admin_user_path(@post.user.id) do %>
						<%= attachment_image_tag @user, :profile_image, :fill, 180, 180, fallback: "no_image.jpg", size:'180x180' %>
					<% end %>
				</div>
				<div class= "user_show_info">
					<h1 class="post_title_show"><%= @post.post_title %></h1>
					<a href="<%= @post.link %>"><%= @post.link %></a>
					<h3><%= @post.user.name %></h3>
				</div>
			</div>
				<div class="text_box col-lg-12">
					<span class="box-title">記事の内容</span>
					<h4><%= @post.post_body %></h4>
				</div>
 					<h1><span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span><%= @post.favorites.count %></h1>
					<h3><%= link_to '記事削除', admin_post_path(@post.id), method: :delete %></h3>

			<% @post_comments.each do |post_comment| %>
				<div class="comment_info_box flex">
					<div class="comment_name">
						<h4><%= post_comment.created_at.strftime('%Y/%m/%d') %></h4>
						<%= link_to admin_user_path(post_comment.user.id) do %>
							<h4><%= post_comment.user.name %></h4>
						<% end %>
					</div>
					<div class="comment_body">
						<h4><%= post_comment.comment_body %></h4>
						<h4><%= link_to '削除', admin_comment_path(post_comment.id), method: :delete %></h4>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>



