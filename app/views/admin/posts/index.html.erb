<h1>admin</h1>
<P><b><%= link_to "管理者としてログイン中　ログアウト", destroy_admin_session_path, method: :delete %></b>

<h1>投稿一覧</h1>
<div class="row clearfix">
	<div class="col-lg-9">
		<% @posts.each do |post| %>
			<div class= "post_info_box flex">
				<div class= "profile_image">
					<%= link_to admin_user_path(post.user.id) do %>
						<%= attachment_image_tag post.user, :profile_image, :fill, 140, 140, fallback: "no_image.jpg", size:'140x140' %>
					<% end %>
				</div>
				<div class= "post_info_1">
					<%= link_to admin_post_path(post.id) do %>
						<h3><%= post.post_title %></h3>
					<% end %>
					<a><%= post.link %></a>
					<%= link_to admin_user_path(post.user.id) do %>
						<h5><%= post.user.name %></h5>
					<% end %>
				</div>
				<div class= "post_info_2">
					<%= post.created_at.strftime('%Y/%m/%d') %>
					<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span><%= post.favorites.count %>
				</div>
			</div>
			<%= link_to "記事削除", admin_post_path(post.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-primary" %>
		<% end %>
	</div>
</div>

