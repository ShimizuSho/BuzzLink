
<div class = "container">
	<div class="row">
		<div class="col-lg-1">
		</div>
		<div class="col-lg-8">
			<h3><%= link_to "管理者としてログイン中　ログアウト", destroy_admin_session_path, method: :delete %></h3>
			<h3><%= link_to "トップページへ", admin_root_path %></h3>
			<h1 class="page_title_show">質問詳細</h1>
			<div class="flex">
				<div class="profile_image_box">
					<%= link_to admin_user_path(@question.user.id) do %>
						<%= attachment_image_tag @question.user, :profile_image, :fill, 150, 150, fallback: "no_image.jpg", size:'150x150' %>
					<% end %>
				</div>
				<div class="question_info">
					<h1 class="question_title_show"><%= @question.question_title %></h1>
					<h4><%= @question.user.name %></h4>
				</div>
			</div>
			<div class="text_box col-lg-12">
				<span class="box-title">質問の内容</span>
				<h4><%= @question.question_body %></h4>
			</div>
			<h4><%= link_to '質問削除', admin_question_path(@question.id), method: :delete, class: "btn btn-lg btn-danger" %></h4>
			<% @question_comments.each do |question_comment| %>
				<div class="comment_info_box flex">
					<div class="comment_name">
						<h4><%= question_comment.created_at.strftime('%Y/%m/%d') %></h4>
						<%= link_to admin_user_path(question_comment.user.id) do %>
							<h4><%= question_comment.user.name %></h4>
						<% end %>
					</div>
					<div class="comment_body">
						<h4><%= question_comment.comment_body %></h4>
						<h4><%= link_to '削除', admin_question_question_comment_path(question_comment.question.id, question_comment.id), method: :delete %></h4>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
